<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--登录注册部分-->
        <!--注册部分-->
        <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>main.java.net.user.controller.Register</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>Register</servlet-name>
            <url-pattern>/auth/register</url-pattern>
        </servlet-mapping>
        <!--登陆部分-->
        <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>main.java.net.user.controller.Login</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>Login</servlet-name>
            <url-pattern>/auth/login</url-pattern>
        </servlet-mapping>

    <!--Servlet部分-->
        <!--番茄时钟-->
        <!--创建番茄时钟-->
        <servlet>
            <servlet-name>CreateClock</servlet-name>
            <servlet-class>main.java.net.clock.service.CreateClock</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>CreateClock</servlet-name>
            <url-pattern>/tomato/createClock</url-pattern>
        </servlet-mapping>
        <!--历史番茄显示-->
        <servlet>
            <servlet-name>ShowTodoList</servlet-name>
            <servlet-class>main.java.net.clock.service.ShowTodoList</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ShowTodoList</servlet-name>
            <url-pattern>/tomato/showTodoList</url-pattern>
        </servlet-mapping>
        <!--任务中断-->
        <servlet>
            <servlet-name>InterruptClock</servlet-name>
            <servlet-class>main.java.net.clock.service.InterruptClock</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>InterruptClock</servlet-name>
            <url-pattern>/tomato/interruptClock</url-pattern>
        </servlet-mapping>
        <!--完成任务-->
        <servlet>
            <servlet-name>FinishClock</servlet-name>
            <servlet-class>main.java.net.clock.service.FinishClock</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>FinishClock</servlet-name>
            <url-pattern>/tomato/finishClock</url-pattern>
        </servlet-mapping>
        <!--查看用户番茄数据-->
        <servlet>
            <servlet-name>ShowAnalysis</servlet-name>
            <servlet-class>main.java.net.clock.service.ShowAnalysis</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ShowAnalysis</servlet-name>
            <url-pattern>/tomato/showAnalysis</url-pattern>
        </servlet-mapping>

    <!--心情日记部分-->
