    <!--评论区部分-->
        <servlet>
            <servlet-name>PostMsg</servlet-name>
            <servlet-class>main.java.net.friend.controller.PostMsg</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>PostMsg</servlet-name>
            <url-pattern>/discuss/create</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>ShowAll</servlet-name>
            <servlet-class>main.java.net.friend.controller.ShowAll</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ShowAll</servlet-name>
            <url-pattern>/discuss/showDiscussList</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>ShowByUserId</servlet-name>
            <servlet-class>main.java.net.friend.controller.ShowByUserId</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ShowByUserId</servlet-name>
            <url-pattern>/discuss/showUserDiscuss</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>Like</servlet-name>
            <servlet-class>main.java.net.friend.controller.Like</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>Like</servlet-name>
            <url-pattern>/discuss/like</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>DeletePost</servlet-name>
            <servlet-class>main.java.net.friend.controller.DeletePost</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>DeletePost</servlet-name>
            <url-pattern>/discuss/deleteDiscuss</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>Transpond</servlet-name>
            <servlet-class>main.java.net.friend.controller.Transpond</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>Transpond</servlet-name>
            <url-pattern>/discuss/transpond</url-pattern>
        </servlet-mapping>
    <!--Filter部分-->
        <filter>
            <filter-name>EncodingFilter</filter-name>
            <filter-class>main.java.tool.FilterTool.EncodingFilter</filter-class>
            <init-param>
                <param-name>encoding</param-name>
                <param-value>utf-8</param-value>
            </init-param>
        </filter>
        <filter-mapping>
            <filter-name>EncodingFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>
        <filter>
            <filter-name>AccessControlFilter</filter-name>
            <filter-class>main.java.tool.FilterTool.AccessControlFilter</filter-class>
            <init-param>
                <param-name>accessControl</param-name>
                <param-value>Access-Control-Allow-Origin</param-value>
            </init-param>
        </filter>
        <filter-mapping>
            <filter-name>AccessControlFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>

</web-app>