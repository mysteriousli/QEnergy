        <servlet-mapping>
            <servlet-name>commentPost</servlet-name>
            <url-pattern>/discuss/commentPost</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>showPostComment</servlet-name>
            <servlet-class>main.java.net.friend.controller.ShowPostComment</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>showPostComment</servlet-name>
            <url-pattern>/discuss/showPostComment</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>showUserComment</servlet-name>
            <servlet-class>main.java.net.friend.controller.ShowUserComment</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>showUserComment</servlet-name>
            <url-pattern>/discuss/showUserComment</url-pattern>
        </servlet-mapping>
        <servlet>
            <servlet-name>DeleteUserComment</servlet-name>
            <servlet-class>main.java.net.friend.controller.DeleteUserComment</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>DeleteUserComment</servlet-name>
