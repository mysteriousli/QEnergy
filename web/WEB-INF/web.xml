        </servlet-mapping>
        <servlet>
        <servlet-name>DeletePostComment</servlet-name>
        <servlet-class>main.java.net.friend.controller.DeletePostComment</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>DeletePostComment</servlet-name>
            <url-pattern>/discuss/deletePostComment</url-pattern>
        </servlet-mapping>



    <!--账单部分-->
        <servlet>
            <servlet-name>CreateBill</servlet-name>
            <servlet-class>main.java.net.bill.controller.CreateBill</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>CreateBill</servlet-name>
            <url-pattern>/bill/createBill</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>ShowList</servlet-name>
            <servlet-class>main.java.net.bill.controller.ShowBillList</servlet-class>
